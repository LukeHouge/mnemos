{
  // Python settings
  "python.defaultInterpreterPath": "/workspace/backend/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",

  // TODO highlighting with distinct colors
  "todohighlight.isEnable": true,
  "todohighlight.isCaseSensitive": false,
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "#ffffff",
      "backgroundColor": "#3498db",
      "overviewRulerColor": "#3498db",
      "border": "1px solid #2980b9"
    },
    {
      "text": "FIXME:",
      "color": "#ffffff",
      "backgroundColor": "#f39c12",
      "overviewRulerColor": "#f39c12",
      "border": "1px solid #e67e22"
    },
    {
      "text": "XXX:",
      "color": "#ffffff",
      "backgroundColor": "#e74c3c",
      "overviewRulerColor": "#e74c3c",
      "border": "1px solid #c0392b"
    },
    {
      "text": "HACK:",
      "color": "#ffffff",
      "backgroundColor": "#9b59b6",
      "overviewRulerColor": "#9b59b6",
      "border": "1px solid #8e44ad"
    },
    {
      "text": "NOTE:",
      "color": "#ffffff",
      "backgroundColor": "#2ecc71",
      "overviewRulerColor": "#2ecc71",
      "border": "1px solid #27ae60"
    }
  ],
  "todohighlight.keywordsPattern": "",
  "todohighlight.defaultStyle": {
    "color": "#ffffff",
    "backgroundColor": "#3498db",
    "overviewRulerColor": "grey",
    "cursor": "pointer",
    "border": "1px solid #eee",
    "isWholeLine": false
  },
  "todohighlight.include": [
    "**/*.py",
    "**/*.md",
    "**/*.yml",
    "**/*.yaml",
    "**/*.toml",
    "**/*.json"
  ],
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/dist/**",
    "**/build/**",
    "**/.venv/**",
    "**/venv/**",
    "**/__pycache__/**",
    "**/.pytest_cache/**",
    "**/.ruff_cache/**",
    "**/.mypy_cache/**",
    "**/uv.lock",
    "**/package-lock.json",
    "**/yarn.lock"
  ],
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/dist/**",
    "**/build/**",
    "**/.venv/**",
    "**/venv/**",
    "**/__pycache__/**",
    "**/.pytest_cache/**",
    "**/.ruff_cache/**"
  ],

  // Ruff settings (replaces pylint, flake8, black, isort)
  "ruff.enable": true,
  "ruff.codeAction.fixViolation": {
    "enable": true
  },
  "ruff.codeAction.disableRuleComment": {
    "enable": true
  },
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "ruff.lint.enable": true,
  "ruff.format.args": [],
  "ruff.lint.args": [],

  // Pyright settings
  "pyrightconfig.json": "backend/pyproject.toml",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportMissingImports": "warning",
    "reportMissingTypeStubs": "none"
  },

  // Editor settings
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.rulers": [100]
  },

  // File associations
  "files.associations": {
    "*.py": "python"
  },

  // Exclude patterns
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true
  },

  // Search exclude
  "search.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.venv": true,
    "**/venv": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/node_modules": true
  },

  // Watcher exclude
  "files.watcherExclude": {
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.mypy_cache/**": true
  },
  "cursorpyright.analysis.autoImportCompletions": true,
  "cursorpyright.analysis.diagnosticMode": "workspace",
  "cursorpyright.analysis.diagnosticSeverityOverrides": {
    "reportMissingImports": "warning",
    "reportMissingTypeStubs": "none"
  },
  "cursorpyright.analysis.typeCheckingMode": "basic"
}
